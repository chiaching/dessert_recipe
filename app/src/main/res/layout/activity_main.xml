<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp"
    android:paddingRight="4dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.dessertrecipe.MainActivity">

    <ImageView
        android:id="@+id/d0"
        android:src="@drawable/star"
        android:layout_width="250dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        />




    <ImageView
        android:id="@+id/d1"
        android:src="@drawable/cheesecake"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        />


    <ImageView
        android:id="@+id/d2"
        android:src="@drawable/cookies"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="150dp"
        />

    <ImageView
        android:id="@+id/d3"
        android:src="@drawable/pancake"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="150dp"
        />

    <ImageView
        android:id="@+id/d4"
        android:src="@drawable/pudding"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="330dp"
        />
    <ImageView
        android:id="@+id/d5"
        android:src="@drawable/yogert"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="330dp"
        />

    <ScrollView
        android:layout_marginLeft="80dp"
        android:layout_marginTop="140dp"
        android:layout_width="200dp"
        android:layout_height="200dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n \n \n\n  How much dessert do you want?"
        android:textSize="18dp"
        android:textColor="#000000"
        android:id="@+id/recipe"/>

    </ScrollView>


    <Button
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:text="+"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:id="@+id/button_cake_plus"
        android:onClick="pluscake"
        android:background="#F8BBD0"
       />
    <Button
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:text="-"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="35dp"
        android:id="@+id/button_cake_muius"
        android:onClick="mulscake"
        android:background="#90CAF9"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/text_cake"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chesscake"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:id="@+id/cake"
        />






    <Button
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:text="+"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="400dp"
        android:id="@+id/button_pudding_plus"
        android:onClick="pluspudding"
        android:background="#F8BBD0"
        />
    <Button
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:text="-"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="435dp"
        android:id="@+id/button_pudding_muius"
        android:onClick="mulspudding"
        android:background="#90CAF9"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="410dp"
        android:text="0"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/text_pudding"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pudding"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="420dp"
        android:textSize="20dp"
        android:id="@+id/pudding"
        />




    <Button
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:text="+"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="400dp"
        android:id="@+id/button_yoguert_plus"
        android:onClick="plusyoguert"
        android:background="#F8BBD0"
        />
    <Button
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:text="-"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="435dp"
        android:id="@+id/button_yoguert_muius"
        android:onClick="mulsyoguert"
        android:background="#90CAF9"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="410dp"
        android:text="0"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/text_yoguert"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yoguert"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="420dp"
        android:textSize="20dp"
        android:id="@+id/yoguert"
        />




    <Button
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:text="+"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="110dp"
        android:id="@+id/button_cookies_plus"
        android:onClick="pluscookies"
        android:background="#F8BBD0"
        />
    <Button
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:text="-"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="110dp"
        android:id="@+id/button_cookies_muius"
        android:onClick="mulscookies"
        android:background="#90CAF9"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="110dp"
        android:text="0"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/text_cookies"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cookies"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="85dp"
        android:textSize="20dp"
        android:id="@+id/cookies"
        />



    <Button
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:text="+"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="110dp"
        android:id="@+id/button_pancake_plus"
        android:onClick="pluspancake"
        android:background="#F8BBD0"
        />
    <Button
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:text="-"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="110dp"
        android:id="@+id/button_pancake_muius"
        android:onClick="mulspancake"
        android:background="#90CAF9"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="110dp"
        android:text="0"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/text_pancake"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pancake"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="85dp"
        android:textSize="20dp"
        android:id="@+id/pancake"
        />


</RelativeLayout>
